<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

	<suite name="Tests" verbose="1" >

	<test name="проверка открытия нужной нам страницы" enabled="true">
		<classes>
			<class name="test.java.autorisations.autorisation">
				<methods>
					<include name="title"/>
				</methods>
			</class>
		</classes>
	</test>
    <test name="Успешная авторизация" enabled="true">
        <classes>
            <class name="test.java.autorisations.formsAutorisations.passAutorisation">
                <methods>
                    <include name="title"/>
                    <include name="autorizations"/>
                </methods>
            </class>
        </classes>
    </test>
	<test name="Ошибка авторизации" enabled="true">
		<classes>
			<class name="test.java.autorisations.formsAutorisations.failAutorisation">
				<methods>
					<include name="title"/>
					<include name="failAutorizations"/>
				</methods>
			</class>
		</classes>
	</test>
	<test name="Смена языка" enabled="true">
		<classes>
			<class name="test.java.autorisations.formsAutorisations.switchLanguage">
				<methods>
					<include name="title"/>
					<include name="switchLanguage"/>
				</methods>
			</class>
		</classes>
	</test>
	<test name="Подсказки полей" enabled="true">
		<classes>
			<class name="test.java.autorisations.formsAutorisations.cluePlace">
				<methods>
					<include name="title"/>
					<include name="cluePlace"/>
				</methods>
			</class>
		</classes>
	</test>
		</suite>
