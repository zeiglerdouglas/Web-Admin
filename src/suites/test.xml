<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

	<suite name="Tests" verbose="1" >

	<test name="проверка открытия нужной нам страницы" enabled="false">
		<classes>
			<class name="test.java.autorisations.autorisation">
				<methods>
					<include name="title"/>
				</methods>
			</class>
		</classes>
	</test>
    <test name="Успешная авторизация" enabled="false">
        <classes>
            <class name="test.java.autorisations.formsAutorisations.passAutorisation">
                <methods>
                    <include name="title"/>
                    <include name="autorizations"/>
                </methods>
            </class>
        </classes>
    </test>
	<test name="Ошибка авторизации" enabled="false">
		<classes>
			<class name="test.java.autorisations.formsAutorisations.failAutorisation">
				<methods>
					<include name="title"/>
					<include name="failAutorizations"/>
				</methods>
			</class>
		</classes>
	</test>
	<test name="Смена языка" enabled="false">
		<classes>
			<class name="test.java.autorisations.formsAutorisations.switchLanguage">
				<methods>
					<include name="title"/>
					<include name="switchLanguage"/>
				</methods>
			</class>
		</classes>
	</test>
	<test name="Подсказки полей" enabled="false">
		<classes>
			<class name="test.java.autorisations.formsAutorisations.cluePlace">
				<methods>
					<include name="title"/>
					<include name="cluePlace"/>
				</methods>
			</class>
		</classes>
	</test>
	<test name="Валидация полей" enabled="false">
		<classes>
			<class name="test.java.autorisations.formsAutorisations.validationPlace">
				<methods>
					<include name="title"/>
					<include name="validationPlace"/>
				</methods>
			</class>
		</classes>
	</test>
    <test name="Верификация пользователя" enabled="false">
        <classes>
            <class name="test.java.autorisations.formsAutorisations.verificationUsers">
                <methods>
                    <include name="title"/>
                    <include name="verificationUsers"/>
                </methods>
            </class>
        </classes>
    </test>
	<!--левая панель-->
	<test name="Сворачивание/Разворачивание панели" enabled="false">
		<classes>
			<class name="test.java.leftPanel.turnOffOnPanel">
				<methods>
					<include name="title"/>
					<include name="autorizations"/>
					<include name="leftPanelTrunOff"/>
					<include name="leftPanelTrunOn"/>
				</methods>
			</class>
		</classes>
	</test>
    <test name="Переход между вкладками" enabled="true">
        <classes>
            <class name="test.java.leftPanel.tabsPanel">
                <methods>
                    <include name="title"/>
                    <include name="autorizations"/>
                    <include name="tabsPanel"/>
                </methods>
            </class>
        </classes>
    </test>
		</suite>
